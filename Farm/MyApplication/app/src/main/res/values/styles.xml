<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>sea
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/whitesmoke</item>
        <item name="android:textColorSecondary">@color/whitesmoke</item>
    </style>
    <style name="LocationActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/whitesmoke</item>
        <item name="android:textColorSecondary">@color/whitesmoke</item>
        <!--修改searchView样式-->
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="anim_popup_widow">
        <item name="android:windowEnterAnimation">@anim/popupwindow_in</item>
        <item name="android:windowExitAnimation">@anim/popupwindow_out</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@mipmap/search</item>
        <item name="searchHintIcon">@null</item>
    </style>


</resources>
